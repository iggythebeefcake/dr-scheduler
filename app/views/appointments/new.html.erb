<h1>Schedule an Appointment</h1>

<%= form_with(model: [@appointment], local: true, class: "ui form" ) do |f| %>
  <%= f.label :doctor %>
  <%= f.select :doctor_id, @doctors.collect { |u| [u.name, u.id] } %>
  <%= f.label :patient %>
  <%= f.select :patient_id, @patients.collect { |u| [u.first_name, u.last_name, u.id] } %>
  <%= f.label :appointment_date %>
  <%= f.text_field :appointment_date, required: true %>
  <br />
  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>